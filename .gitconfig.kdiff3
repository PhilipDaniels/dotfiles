# vim: set filetype=gitconfig:

# This is an example of how to setup git on Windows (MSysGit) to
# use kdiff3 for diff and merge.
[merge]
    tool = kdiff3
[mergetool "kdiff3"]
    path = C:/Users/Phil/OtherApps/KDiff3-64bit/kdiff3.exe
[diff]
    guitool = kdiff3
    tool = kdiff3
[difftool "kdiff3"]
    path = C:/Users/Phil/OtherApps/KDiff3-64bit/kdiff3.exe
[difftool]
    prompt = false

