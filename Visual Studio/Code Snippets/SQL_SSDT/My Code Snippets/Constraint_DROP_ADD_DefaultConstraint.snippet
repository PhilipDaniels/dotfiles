	<CodeSnippet Format="1.0.0">
	<Header>
		<Title>Constraint - DROP/ADD template for a DEFAULT constraint.</Title>
        <Shortcut></Shortcut>
	<Description>Constraint - DROP/ADD template for a DEFAULT constraint.</Description>
	<Author>Philip Daniels</Author>
	<SnippetTypes>
		<SnippetType>Expansion</SnippetType>
	</SnippetTypes>
	</Header>
	<Snippet>
		<Declarations>
			<Literal>
				<ID>SchemaName</ID>
				<ToolTip>Name of the schema</ToolTip>
				<Default>dbo</Default>
			</Literal>
			<Literal>
				<ID>TableName</ID>
				<ToolTip>Name of the table</ToolTip>
				<Default>MyTable</Default>
			</Literal>
			 <Literal>
				<ID>ConstraintName</ID>
				<ToolTip>Name of the constraint</ToolTip>
				<Default>MyCons</Default>
			 </Literal>
		</Declarations>
		<Code Language="SQL">
      <![CDATA[IF EXISTS (SELECT * FROM sys.objects WHERE name = 'DF_$SchemaName$_$TableName$_$ConstraintName$' and type = 'D') BEGIN
    ALTER TABLE $SchemaName$.$TableName$ DROP CONSTRAINT DF_$SchemaName$_$TableName$_$ConstraintName$;
END
ALTER TABLE $SchemaName$.$TableName$ WITH CHECK ADD CONSTRAINT DF_$SchemaName$_$TableName$_$ConstraintName$ DEFAULT(10.0) FOR ColumnName;$end$
]]>
		</Code>
	</Snippet>
	</CodeSnippet>
</CodeSnippets>
